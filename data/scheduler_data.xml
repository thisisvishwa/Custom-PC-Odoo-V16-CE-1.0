<odoo>
    <data noupdate="1">
        <!-- Scheduler to update component prices -->
        <record id="scheduler_update_component_prices" model="ir.cron">
            <field name="name">Update Component Prices</field>
            <field name="model_id" ref="model_component"/>
            <field name="state">code</field>
            <field name="code">model.fetch_component_prices()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 03:00:00')"/>
        </record>
    </data>
</odoo>